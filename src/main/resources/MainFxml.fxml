<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.MainController"
      alignment="CENTER"
      spacing="20"
      stylesheets="@styles.css">

    <!-- Image en haut -->
    <ImageView>
        <Image url="@image/reclamation2.jpg"/>
    </ImageView>

    <!-- Boutons avec actions -->
    <Button text="Afficher Réclamations" onAction="#afficherReclamations" styleClass="menu-button"/>
    <Button text="Ajouter Réclamation" onAction="#ajouterReclamations" styleClass="menu-button"/>
    <Button text="Répondre à une Réclamation" onAction="#repondreReclamations" styleClass="menu-button"/>

</VBox>
